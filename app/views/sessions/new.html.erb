<%= stylesheet_link_tag "sessions_new.css" %>

<div class="container">
  <h1>WELCOME</h1>

  <% if flash[:notice] %>
    <%= content_tag :div, flash[:notice], class: "flash-notice" %>
  <% else %>
    <%= content_tag :h2, "Please Log in" %>
  <% end %>

  <%= form_with(url: sessions_path, class: "login-form") do |f| %>
    <%= f.text_field :email, placeholder: "Email", class: "form-control" %><br>
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %><br>
    <%= f.submit "Sign In!", class: "btn btn-primary" %><br>

    <p class="signup-link">
      Don't have an account?
      <%= link_to "Sign Up", new_user_path %>
      <%#= link_to "forget_password", edit_user_path({params[:id})%>
    </p>
  <% end %>
</div>
