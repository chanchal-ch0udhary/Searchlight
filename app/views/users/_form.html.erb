<%= stylesheet_link_tag "users_form.css" %>

<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@user.errors.count, "error") %> prohibited this friend from being saved:</h4>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |form| %>
  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :bio, class: "form-label" %>
    <%= form.text_field :bio, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :profile, class: "form-label" %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>

  <%= form.submit "SUBMIT", class: "btn btn-primary" %>
<% end %>
